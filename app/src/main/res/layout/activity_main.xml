<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Which finger is that?"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START"
                android:textStyle="bold"
                android:id="@+id/start"
                android:layout_marginTop="40dp"
                android:visibility="visible"
                android:layout_below="@+id/text_top"
                android:layout_centerVertical="true"
                android:textSize="80sp"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"/>

            <ImageView
                android:id="@+id/hand1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/text_top"
                android:layout_centerVertical="true"
                android:src="@drawable/finger_1" />

            <ImageView
                android:id="@+id/hand2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                android:layout_below="@+id/text_top"
                android:layout_centerVertical="true"
                android:src="@drawable/finger_2" />

            <ImageView
                android:id="@+id/hand3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                android:layout_below="@+id/text_top"
                android:layout_centerVertical="true"
                android:src="@drawable/finger_3" />

            <ImageView
                android:id="@+id/hand4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                android:layout_below="@+id/text_top"
                android:layout_centerVertical="true"
                android:src="@drawable/finger_4" />

            <ImageView
                android:id="@+id/hand5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                android:layout_below="@+id/text_top"
                android:layout_centerVertical="true"
                android:src="@drawable/finger_5" />

            <LinearLayout
                android:id="@+id/layout_finger"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/f1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Thumb Finger"
                        android:layout_weight="1"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/f2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Index Finger"
                        android:layout_weight="1"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/f3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Middle Finger"
                        android:layout_weight="1"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/f4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Ring Finger"
                        android:layout_weight="1"
                        android:textColor="@color/white"/>

                    <Button
                        android:id="@+id/f5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Pinky Finger"
                        android:layout_weight="1"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/cong_gif"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cong_gif"
                android:visibility="gone"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/try_gif"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/try_gif"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wow !!! It's Right Answer..."
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Next Challenge"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/restart_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Restart Game"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Privacy policy" />

            <Button
                android:id="@+id/thumbs_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Thumbs"
                android:textColor="@color/white"
                android:textSize="20dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>